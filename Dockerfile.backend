# 多阶段构建后端（JDK 8）
ARG BASE_REGISTRY=docker.io
FROM ${BASE_REGISTRY}/library/maven:3.8.8-jdk-8 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn -q -DskipTests package

FROM ${BASE_REGISTRY}/library/openjdk:8-jre
WORKDIR /app
COPY --from=build /app/target/BaoTao-0.0.1-SNAPSHOT.jar app.jar
EXPOSE 8080
ENV JAVA_OPTS=""
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar app.jar"]


